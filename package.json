{
  "name": "logtry",
  "version": "0.4.0",
  "description": "A Pino configurable logger for NodeJS to send logs to loggly and sentry",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prettier": "prettier -l index.js '{streams,test}/**/*.js'",
    "prettier:write": "prettier --write '**/*.{js,yml,yaml,json,md}'",
    "eslint": "eslint .",
    "lint": "npm run prettier && npm run eslint",
    "mocha": "_mocha --exit",
    "coverage": "NODE_ENV=test nyc _mocha --exit",
    "test": "npm run lint && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexabidri/logtry.git"
  },
  "keywords": [
    "logger",
    "loggly",
    "logging",
    "node",
    "tools",
    "sentry",
    "transport",
    "pino"
  ],
  "author": "Alexandre Abidri <alex.abidri@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "4.2.0",
    "eslint": "7.3.1",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.0",
    "mocha": "8.0.1",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "rewire": "5.0.0",
    "sinon": "9.0.2"
  },
  "dependencies": {
    "@sentry/node": "5.18.1",
    "json-stringify-safe": "5.0.1",
    "lodash": "4.17.15",
    "node-loggly-bulk": "2.2.4",
    "pino": "6.3.2",
    "pino-multi-stream": "5.0.0"
  },
  "mocha": {
    "diff": true,
    "recursive": true,
    "growl": true,
    "extension": [
      "js"
    ],
    "package": "./package.json",
    "reporter": "spec",
    "slow": 75,
    "timeout": 3000,
    "ui": "bdd",
    "watch-files": [
      "test/**/*.js"
    ]
  },
  "engines": {
    "node": "12.18"
  }
}
